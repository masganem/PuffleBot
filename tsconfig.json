{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": true
  },
  "include" : [
    "src/**/*.ts"   /* Include every ts file in source folder */
  ],
  "exclude" : [
      "node_modules"  /* exclude everything in  node_modules */
  ],
  "noImplicitAny": false

}